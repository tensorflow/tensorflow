# Description:
# Go API for TensorFlow.

load(
    "//tensorflow:tensorflow.bzl",
    "tf_shared_library_deps",
)

load("@io_bazel_rules_go//go:def.bzl", "go_test")

package(
    default_visibility = ["//visibility:private"],
)

licenses(["notice"])  # Apache 2.0

sh_test(
    name = "test",
    size = "small",
    srcs = ["test.sh"],
    data = [
        ":all_files",  # Go sources
        "//tensorflow/c:headers",  # C library header
        "//tensorflow/c/eager:headers",  # Eager C library header
        "//tensorflow/cc/saved_model:saved_model_half_plus_two",  # Testdata for LoadSavedModel
    ] + tf_shared_library_deps(),
    # TODO: Enable this test again once protos are supported by bazel.
    tags = ["manual"],
)

# ------------------------------------------------------------------------------
# go_default_test: Runs all Go tests in this package, including new session config tests.
# This target ensures that all *_test.go files are executed as part of the Bazel test suite.
# ------------------------------------------------------------------------------
go_test(
    name = "go_default_test",
    srcs = glob(["*_test.go"]),
    embed = [":go_default_library"],
    deps = [
        # Add any extra dependencies here if needed
    ],
)

filegroup(
    name = "all_files",
    srcs = glob(
        ["**/*"],
        exclude = [
            "**/METADATA",
            "**/OWNERS",
        ],
    ),
    visibility = ["//tensorflow:__subpackages__"],
)
