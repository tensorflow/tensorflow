#!/usr/bin/env bash
#
# prerequisites: install python
# sudo apt-get install python-numpy python-dev python-pip python-wheel
#
# configure with python
# PYTHON_BIN_PATH=/usr/bin/python ./configure
#
# press enter all the way
#
pip uninstall -y tensorflow || true
bazel build --jobs 15 --strip=never --config=opt --config=rocm //tensorflow/tools/pip_package:build_pip_package --verbose_failures &&
bazel-bin/tensorflow/tools/pip_package/build_pip_package /tmp/tensorflow_pkg &&
pip install /tmp/tensorflow_pkg/tensorflow-1.9.0rc0-cp27-cp27mu-linux_x86_64.whl
